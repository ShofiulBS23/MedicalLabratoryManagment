
<style>
    body {
        padding-top: 20px;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e3e6f0;
        font-size: 1.25rem;
    }


</style>

<div class="container">
    <div class="cardx">
        <h2>Test Data</h2>
        <div class="">
            <form id="testForm">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="testID">Test ID:</label>
                        <input type="text" class="form-control" id="testID" value="1">
                    </div>
                    <div class="col-md-4">
                        <label for="testName">Test Name:</label>
                        <input type="text" class="form-control" id="testName" value="HB">
                    </div>
                    <div class="col-md-4">
                        <label for="sampleUnit">Sample Unit:</label>
                        <input type="text" class="form-control" id="sampleUnit" value="fL">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label for="testType">Test Type:</label>
                        <select class="form-control" id="testType">
                            <option>BIOCHEMSTRY</option>
                            <option>OTHER</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="sampleType">Sample Type:</label>
                        <select class="form-control" id="sampleType">
                            <option>Blood</option>
                            <option>Urine</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="minRange">Min Range:</label>
                        <input type="text" class="form-control" id="minRange" value="10">
                    </div>
                    <div class="col-md-3">
                        <label for="maxRange">Max Range:</label>
                        <input type="text" class="form-control" id="maxRange" value="30">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="price">Price:</label>
                        <input type="text" class="form-control" id="price" value="250">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12 text-center">
                        <button type="button" class="btn btn-secondary">Cancel</button>
                        <button type="button" class="btn btn-danger">Delete</button>
                        <button type="button" class="btn btn-info">Search</button>
                        <button type="button" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-success">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Existing Content -->
<!-- Add this for the Modal -->
<div class="modal" tabindex="-1" role="dialog" id="searchModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Search</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="overflow-x: scroll;">
                <table id="searchTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Test_ID</th>
                            <th>Test_Name</th>
                            <th>Test_Type</th>
                            <th>Sample_Type</th>
                            <th>Sample_Unit</th>
                            <th>Min_Value</th>
                            <th>Max_Value</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data dynamically filled by DataTables -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="modalOk">Ok</button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        $(document).ready(function () {

            var table = $('#searchTable').DataTable({
                // Optionally load data via Ajax or define within page
                // ajax: 'path/to/data.json',
                data: [ // Dummy data for example
                    [1, "HB", "BIOCHEMISTRY", "Blood", "fL", 10, 30, 250],
                    [2, "PCV", "HORMONE", "Uran", "L", 15, 30, 150],
                    // Add more rows as needed
                ]
            });

            $('#searchTable tbody').on('click', 'tr', function () {
                var data = table.row(this).data();
                $('#testID').val(data[0]);
                $('#testName').val(data[1]);
                $('#testType').val(data[2]);
                $('#sampleType').val(data[3]);
                $('#sampleUnit').val(data[4]);
                $('#minRange').val(data[5]);
                $('#maxRange').val(data[6]);
                $('#price').val(data[7]);
                $('#searchModal').modal('hide'); // Hide modal after selection
            });

            $('#modalOk').click(function () {
                $('#searchModal').modal('hide');
            });



            // Implement button functionalities
            $('#testForm button').click(function (event) {
                var buttonType = $(this).text();
                switch (buttonType) {
                    case 'Save':
                        alert('Save clicked');
                        break;
                    case 'Search':
                        $('#searchModal').modal('show');
                        break;
                    case 'Add':
                        alert('Add clicked');
                        break;
                    case 'Delete':
                        alert('Delete clicked');
                        break;
                    case 'Cancel':
                        alert('Cancel clicked');
                        break;
                }
            });
        });


    </script>
}
